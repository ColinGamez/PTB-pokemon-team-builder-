{
  "name": "Pokemon Team Builder",
  "displayName": "Pokemon Team Builder",
  "expo": {
    "name": "Pokemon Team Builder",
    "slug": "pokemon-team-builder",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#3B82F6"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pokemonteambuilder.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3B82F6"
      },
      "package": "com.pokemonteambuilder.app",
      "versionCode": 1,
      "permissions": [
        "INTERNET",
        "CAMERA",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE"
      ],
      "usesCleartextTraffic": true
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to set profile pictures.",
          "cameraPermission": "The app accesses your camera to take profile pictures."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#3B82F6",
          "sounds": ["./assets/notification.wav"]
        }
      ],
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#3B82F6",
          "image": "./assets/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "dark": {
            "backgroundColor": "#0F172A",
            "image": "./assets/splash-icon-dark.png"
          }
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true,
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "buildToolsVersion": "34.0.0"
          },
          "ios": {
            "deploymentTarget": "13.0"
          }
        }
      ],
      "expo-localization",
      "expo-device",
      "expo-crypto",
      "expo-secure-store"
    ],
    "scheme": "pokemonteambuilder",
    "privacy": "unlisted",
    "extra": {
      "apiUrl": "http://localhost:5000/api",
      "eas": {
        "projectId": "pokemon-team-builder"
      }
    }
  }
}